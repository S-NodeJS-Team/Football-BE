// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  phoneNumber   String?  @unique
  email         String   @unique
  password      String
  avatar        String?
  skills        Skill[]
  rating        String?
  role          Int?
  position      String[]
  teamId        String?
  tournamentIds String[]
  is_verified   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

type Skill {
  subject  String
  point    Int
  fullMark Int
}

model Team {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @unique
  description   String?
  galleryImages String[]
  logo          String?
  matchIds      String[]
  slug          String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Match {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  tournamentId String
  matchDate    DateTime
  teamIds      String[]
  homeTeamId   String
  awayTeamId   String
  type         Int
  result       String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Tournament {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  startDate DateTime
  endDate   DateTime
  status    Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OtpCode {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  otp      String
  expireIn DateTime
  userId   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Gallery {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  imageLink    String
  resourceType Int
  resourceId   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model VerifyLink {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  verifyToken String
  userId      String @unique
}
